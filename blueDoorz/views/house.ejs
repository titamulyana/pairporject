<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Rent House</title>
    <style>
    .card-img-top {
    width: 100%;
    height: 25vw;
    object-fit: cover;
    }

    .alert{
    text-align: center
    }

    .buttons {
    /* margin-top: 100px; */
    margin-bottom: 0;
    }

    .closebtn {
    margin-left: 15px;
    color: black;
    font-weight: bold;
    float: right;
    font-size: 22px;
    line-height: 20px;
    cursor: pointer;
    transition: 0.3s;
    }

    ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
    }

    li {
    float: left;
    }

    li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    }
    
    /* Change the link color to #111 (black) on hover */
    li a:hover {
    background-color: #111;
    }

    </style>
  </head>
  <body>
    
    <ul>
        <li><a href="/house">Home</a></li>
        <li><a href="/house/add">Add House</a></li>
        <li><a href="/profile/detail">Profile Detail</a></li>
        <li style="float: right;"><a href="/logout">Logout</a></li>
    </ul><br>
    
    <form action="/house/" method="get">
        <div class="container-fluid">
            <input type="text" placeholder="Search by Name" style="width: 64%;" name="searchByName">
            <input type="text" placeholder="Search by Location" style="width: 24%;" name="searchByAddress">
            <input type="submit" class="btn btn-primary btn-sm" value="Search">
        </div>
    </form>
    <hr>

    <div class="container">
        <div class="row gy-3">
            <% data.forEach(ele => { %>
                <div class="col-12 col-md-6" >
                    <div class="card h-70">
                        <a href="/house/<%= ele.formattedName %>"><img src="<%= ele.imageURL %>"  class="card-img-top " alt="Photo of Arts"></a>
                        <div class="card-body">
                            <h5 class="card-title"><%= ele.name %></h5>
                            <strong><p class="card-text"><%= `${ele.formatCurrency()} / bulan`  %></p></strong>
                            <p class="card-text"><%= ele.address  %></p>
                            <a href="/house/<%= ele.id %>/delete"><button class="btn btn-danger" style="float: right;">Delete</button></a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div><br>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>