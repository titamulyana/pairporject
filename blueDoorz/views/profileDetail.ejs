<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Betamart Store</title>

    <style>
    h2 {
    text-align: center
    }

    .table-bordered {
    text-align: center    
    }

    ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
    }

    li {
    float: left;
    }

    li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    }
    
    /* Change the link color to #111 (black) on hover */
    li a:hover {
    background-color: #111;
    }

    </style>
  </head>
  <body>
    <ul>
        <li><a href="/house">Home</a></li>
        <li><a href="/house/add">Add House</a></li>
        <li><a href="/profile/detail">Profile Detail</a></li>
        <li style="float: right;"><a href="/logout">Logout</a></li>
    </ul><br>

    <h2>Profile Detail</h2><br>

    <table class="table table-bordered align-middle mb-0 bg-light">
        <thead style="background-color: aquamarine;">
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
                <tr>
                    <td>
                        <%= data.fullName() %>
                    </td>
                    <td>
                        <%= data.age %>
                    </td>
                    <td>
                        <%= data.gender %>
                    </td>
                    <td>
                        <%= data.address %>
                    </td>
                    <td>
                        <%= data.User.username %>
                    </td>
                    <td>
                        <%= data.User.email %>
                    </td>
                    <td>
                        <%= data.User.role %>
                    </td>
                    <td>
                        <div class="buttons">
                            <a href="<%= data.id %>/edit" class="btn btn-primary btn-sm" role="button">Edit</a>
                        </div>
                    </td>
                </tr>
        </tbody>
    </table>
   
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>